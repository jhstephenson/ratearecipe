<p id="notice"><%= notice %></p>

<h1>Listing Recipes</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Rating</th>
      <th>Instructions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.description %></td>
        <td><%= recipe.rating %></td>
        <td><%= recipe.instructions %></td>
        <td><%= link_to 'Show', recipe, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

